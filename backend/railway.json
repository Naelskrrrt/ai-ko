{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python3 -m pip install -r requirements-railway.txt"
  },
  "deploy": {
    "startCommand": "python3 -m gunicorn --bind 0.0.0.0:$PORT --workers 1 --timeout 180 run:app",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}

