# ========================================
# CONFIGURATION TEMPLATE FRONTEND
# ========================================

# ----------------------------------------
# MODE DE FONCTIONNEMENT
# ----------------------------------------
# true = Mode démo avec données mockées (pas de backend requis)
# false = Mode production avec vraie authentification et API backend
NEXT_PUBLIC_DEMO_MODE=true

# ----------------------------------------
# CONFIGURATION API
# ----------------------------------------
# URL publique de votre API backend (visible côté client)
NEXT_PUBLIC_API_URL=http://localhost:8000

# URL interne pour les appels serveur (Docker, SSR)
# Utilisée uniquement côté serveur Next.js
BACKEND_INTERNAL_URL=http://backend:8000

# ----------------------------------------
# AUTHENTIFICATION (MODE PRODUCTION)
# ----------------------------------------
# Clé secrète pour signer les tokens JWT côté frontend (validation)
# ⚠️ À changer en production ! Générer avec: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Durée de validité du token d'accès (en secondes)
JWT_ACCESS_TOKEN_EXPIRY=900          # 15 minutes

# Durée de validité du refresh token (en secondes)
JWT_REFRESH_TOKEN_EXPIRY=604800      # 7 jours

# Nom du cookie pour stocker le token d'accès
AUTH_COOKIE_NAME=auth_token

# Nom du cookie pour stocker le refresh token
REFRESH_COOKIE_NAME=refresh_token

# ----------------------------------------
# SÉCURITÉ
# ----------------------------------------
# Domaine des cookies (vide = domaine actuel)
COOKIE_DOMAIN=

# Sécurisé uniquement en HTTPS (true en production)
COOKIE_SECURE=false

# SameSite policy pour les cookies (Strict, Lax, None)
COOKIE_SAME_SITE=Lax

# ----------------------------------------
# CONFIGURATION NEXT.JS
# ----------------------------------------
# Environnement (development, production, test)
NODE_ENV=development

# Port du serveur Next.js
PORT=3000
