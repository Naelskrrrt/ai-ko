# Database
POSTGRES_DB=systeme_intelligent
POSTGRES_USER=root
POSTGRES_PASSWORD=root
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=root
REDIS_PORT=6379

# Flask Backend
SECRET_KEY=change_me_secret_key_min_32_chars
JWT_SECRET_KEY=change_me_jwt_secret_key
FLASK_ENV=production
BACKEND_PORT=5000
GUNICORN_WORKERS=4

# Celery
CELERY_WORKERS=2

# Frontend
# URL de l'API backend
# En développement local: http://localhost:5000
# Avec ngrok: https://votre-url-ngrok-backend.ngrok-free.app
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXTAUTH_SECRET=change_me_nextauth_secret
NEXTAUTH_URL=http://localhost:3000
FRONTEND_PORT=3000
BETTER_AUTH_SECRET=change_me_better_auth_secret
BETTER_AUTH_URL=http://localhost:3000

# NGROK Configuration (optionnel mais recommandé)
# Obtenez votre token sur https://dashboard.ngrok.com/get-started/your-authtoken
# NGROK_AUTHTOKEN=votre_token_ngrok_ici
# URLs ngrok pour exposer l'application sur internet
# Remplacez ces valeurs par vos URLs ngrok réelles après avoir démarré ngrok
# NGROK_FRONTEND_URL=https://votre-url-ngrok-frontend.ngrok-free.app
# NGROK_BACKEND_URL=https://votre-url-ngrok-backend.ngrok-free.app

# Google OAuth
GOOGLE_CLIENT_ID=change_me_google_client_id
GOOGLE_CLIENT_SECRET=change_me_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Hugging Face
HF_API_TOKEN=change_me_hf_token

# CORS
# Ajoutez vos URLs ngrok ici pour permettre les requêtes depuis le frontend exposé
# Exemple: CORS_ORIGINS=http://localhost:3000,https://yourdomain.com,https://votre-url-ngrok-frontend.ngrok-free.app
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Nginx
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3001

